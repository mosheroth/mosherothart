---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getCategoryLabel, getCategorySlugForArtwork } from '../../lib/categories';

export async function getStaticPaths() {
  const artworks = await getCollection('artworks');
  return artworks.map((artwork) => ({
    params: { slug: artwork.slug },
    props: { artwork },
  }));
}

const { artwork } = Astro.props;
const { Content } = await artwork.render();
const base = import.meta.env.BASE_URL.replace(/\/$/, '') || '';
const basePath = base ? `${base}/` : '/';

const categorySlug = getCategorySlugForArtwork(artwork.data);
const categoryHref = categorySlug ? `${basePath}${categorySlug}` : basePath;
const categoryLabel = getCategoryLabel(categorySlug) || 'הכל';
const imgSrc = artwork.data.image.startsWith('/')
  ? `${basePath}${artwork.data.image.slice(1)}`
  : `${basePath}${artwork.data.image}`;
const roomSrc = `${basePath}images/living-room.jpg`;
---

<BaseLayout title={`${artwork.data.titleHe ?? artwork.data.title} | משה רוט`} description={artwork.data.description ?? artwork.data.titleHe ?? artwork.data.title}>
  <div id="drift-zoom-root" dir="ltr" aria-hidden="true"></div>
  <article class="artwork">
    <a href={basePath} class="back-btn">
      <span class="back-btn-arrow" aria-hidden="true">→</span>
      חזרה
    </a>
    <section class="preview-comparison">
      <div class="preview-item">
        <h2>בחלל שלך</h2>
        <div class="room-scene" style={`background-image: url('${roomSrc}')`}>
          <div class="frame">
            <img src={imgSrc} alt={artwork.data.title} />
          </div>
        </div>
      </div>
      <div class="preview-item">
        <h2>מקור</h2>
        <div class="original-wrap" dir="ltr">
          <img src={imgSrc} alt={artwork.data.title} id="original-image" data-zoom={imgSrc} />
        </div>
      </div>
    </section>

    <div class="details">
      <h1 class="artwork-title">
        {artwork.data.titleHe ?? artwork.data.title}
      </h1>
      {artwork.data.year && <span class="year">{artwork.data.year}</span>}
      {categorySlug && (
        <a href={categoryHref} class="category">
          {categoryLabel}
        </a>
      )}

      <dl class="info-list">
        {artwork.data.medium && (
          <>
            <dt>מדיום</dt>
            <dd>{artwork.data.medium}</dd>
          </>
        )}
        {artwork.data.price && (
          <>
            <dt>מחיר</dt>
            <dd class="price">{artwork.data.price}</dd>
          </>
        )}
      </dl>

      {artwork.data.price && (
        <div class={`availability ${artwork.data.sold ? 'sold' : 'available'}`}>
          <span class="availability-dot" aria-hidden="true"></span>
          <span>{artwork.data.sold ? 'נמכר' : 'זמין'}</span>
        </div>
      )}

      {artwork.data.price && !artwork.data.sold && (
        <a
          href="https://www.instagram.com/mzsrtgzr2/"
          target="_blank"
          rel="noopener noreferrer"
          class="contact-btn"
        >
          יצירת קשר באינסטגרם
        </a>
      )}

      <div class="content">
        <Content />
      </div>
    </div>

    <a href={basePath} class="back-btn back-btn-bottom">
      <span class="back-btn-arrow" aria-hidden="true">→</span>
      חזרה
    </a>
  </article>
</BaseLayout>

<style>
  .artwork {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    overflow-x: hidden;
  }

  .back-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding: 0.5rem 0;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    color: #666;
    transition: color 0.2s;
  }

  .back-btn:hover {
    color: #111;
  }

  .back-btn-arrow {
    font-size: 1.1em;
  }

  .back-btn-bottom {
    margin-top: 2rem;
    margin-bottom: 0;
    display: block;
  }

  .details {
    padding: 0 0 3rem;
  }

  .artwork-title {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    margin: 0 0 0.5rem;
  }

  .year {
    font-size: 0.85rem;
    color: #666;
    margin-inline-end: 1rem;
  }

  .category {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
  }

  .category:hover {
    opacity: 1;
  }

  .info-list {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.25rem 2rem;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  .info-list dt {
    font-weight: 500;
    color: #666;
  }

  .info-list dd {
    margin: 0;
  }

  .info-list .price {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .availability {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .availability.available {
    color: #2d7a3e;
  }

  .availability.sold {
    color: #c53030;
  }

  .availability-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .availability.available .availability-dot {
    background: #2d7a3e;
  }

  .availability.sold .availability-dot {
    background: #c53030;
  }

  .contact-btn {
    display: inline-block;
    margin: 1.5rem 0;
    padding: 0.75rem 1.5rem;
    background: #111;
    color: #fff;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .contact-btn:hover {
    opacity: 0.85;
  }

  .content {
    margin-top: 1.5rem;
    line-height: 1.7;
    color: #444;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .preview-comparison {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: stretch;
  }

  .preview-item {
    flex: 1;
    min-width: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .preview-item .room-scene,
  .preview-item .original-wrap {
    width: 100%;
  }

  .preview-item h2 {
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    color: #666;
  }

  #drift-zoom-root {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 9999;
  }

  #drift-zoom-root .drift-zoom-pane {
    pointer-events: none;
  }

  .original-wrap {
    background: #f8f6f2;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    display: block;
  }

  .original-wrap img {
    width: 100%;
    height: auto;
    display: block;
    cursor: zoom-in;
    vertical-align: top;
  }

  :global(.drift-zoom-pane.drift-inline) {
    width: 400px !important;
    height: 400px !important;
    border-radius: 200px !important;
    direction: ltr;
  }

  :global(.drift-zoom-pane.drift-inline img) {
    direction: ltr;
  }

  /* Unified coordinates – frame on wall only, above sofa */
  .room-scene {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    max-height: 400px;
    background-size: 200%;
    background-position: center 5%;
    background-repeat: no-repeat;
    border-radius: 8px;
    overflow: hidden;
    direction: ltr;
  }

  .frame {
    position: absolute;
    top: 6%;
    left: 50%;
    transform: translateX(-50%);
    width: 28%;
    max-width: 100%;
    max-height: 75%;
    aspect-ratio: 3/4;
    padding: 0.4rem;
    background: #f5f0e8;
    box-shadow:
      0 1px 4px rgba(0, 0, 0, 0.06),
      inset 0 0 0 1px rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    direction: ltr;
  }

  .frame img {
    width: 100%;
    height: 100%;
    min-height: 0;
    object-fit: contain;
    object-position: center;
    display: block;
  }

  @media (max-width: 640px) {
    .artwork {
      padding: 1rem 1rem 2rem;
      display: flex;
      flex-direction: column;
    }

    .back-btn {
      order: 0;
      padding: 0.6rem 0.3rem 0.6rem 0;
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }

    .details {
      order: 1;
      padding-bottom: 1.5rem;
    }

    .preview-comparison {
      order: 2;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .preview-item:first-child h2 {
      margin-bottom: 0.75rem;
    }

    .back-btn-bottom {
      order: 3;
    }

    .room-scene {
      border-radius: 0;
    }
  }
</style>

<script>
  import Drift from 'drift-zoom';
  import 'drift-zoom/src/css/drift-basic.css';

  document.addEventListener('DOMContentLoaded', () => {
    const img = document.getElementById('original-image');
    const root = document.getElementById('drift-zoom-root');
    if (img && root) {
      new Drift(img, {
        inlinePane: true,
        zoomFactor: 3,
        injectBaseStyles: true,
        handleTouch: false,
        inlineContainer: root,
        boundingBoxContainer: root,
      });
    }
  });
</script>
