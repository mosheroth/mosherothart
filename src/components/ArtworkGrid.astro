---
import { getCollection } from 'astro:content';

interface Props {
  category?: string;
  limit?: number;
}

const { category, limit } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '') || '';
const basePath = base ? `${base}/` : '/';

let artworks = await getCollection('artworks');

if (category) {
  artworks = artworks.filter((a) => a.data.category === category);
}

if (limit) {
  artworks = artworks.slice(0, limit);
}

artworks = artworks.sort((a, b) => {
  const dateA = a.data.year ?? '';
  const dateB = b.data.year ?? '';
  return dateB.localeCompare(dateA);
});
---

<div class="grid">
  {artworks.map((artwork) => {
    const imgSrc = artwork.data.image.startsWith('/')
      ? `${basePath}${artwork.data.image.slice(1)}`
      : `${basePath}${artwork.data.image}`;
    return (
      <a href={`${basePath}artwork/${artwork.slug}`} class="grid-item">
        <img
          src={imgSrc}
          alt={artwork.data.title}
          loading="lazy"
          decoding="async"
        />
      </a>
    );
  })}
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
    width: 100%;
  }

  .grid-item {
    aspect-ratio: 1;
    overflow: hidden;
    display: block;
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .grid-item:hover img {
    transform: scale(1.03);
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .grid-item {
      aspect-ratio: 4/3;
    }
  }
</style>
