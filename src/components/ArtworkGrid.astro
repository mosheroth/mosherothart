---
import { getCollection } from 'astro:content';
import { filterArtworks, getPriceCategory, parsePrice, type PriceSlug, type StatusSlug } from '../lib/categories';

type SortSlug = 'date' | 'price-asc' | 'price-desc';

interface Props {
  price?: PriceSlug;
  status?: StatusSlug;
  sort?: SortSlug;
  limit?: number;
  clientFilter?: boolean;
}

const { price = '', status = '', sort = 'date', limit, clientFilter = false } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '') || '';
const basePath = base ? `${base}/` : '/';

function sortKeyDate(dateStr: string, yearStr?: string): string {
  if (dateStr && /^\d{4}-\d{2}-\d{2}$/.test(dateStr)) return dateStr;
  if (yearStr && /^\d{4}$/.test(yearStr)) return `${yearStr}-01-01`;
  return dateStr || yearStr || '';
}

function sortArtworks(artworks: typeof import('astro:content').CollectionEntry<'artworks'>[], order: SortSlug) {
  return [...artworks].sort((a, b) => {
    if (order === 'price-asc' || order === 'price-desc') {
      const pa = parsePrice(a.data.price);
      const pb = parsePrice(b.data.price);
      const na = pa ?? 1e9;
      const nb = pb ?? 1e9;
      return order === 'price-asc' ? na - nb : nb - na;
    }
    const dateA = sortKeyDate(a.data.date || '', a.data.year);
    const dateB = sortKeyDate(b.data.date || '', b.data.year);
    return dateB.localeCompare(dateA);
  });
}

let artworks = await getCollection('artworks');
if (!clientFilter) {
  artworks = filterArtworks(artworks, price as PriceSlug, status as StatusSlug);
}

if (limit) {
  artworks = artworks.slice(0, limit);
}

artworks = sortArtworks(artworks, sort as SortSlug);
---

<div class="grid-wrapper" id="artwork-grid">
<div class="grid">
  {artworks.map((artwork) => {
    const imgSrc = artwork.data.image.startsWith('/')
      ? `${basePath}${artwork.data.image.slice(1)}`
      : `${basePath}${artwork.data.image}`;
    const priceCat = getPriceCategory(artwork.data);
    const priceNum = parsePrice(artwork.data.price);
    const isDonation = artwork.data.category === 'donation';
    const isSold = artwork.data.sold ?? false;
    const subjects = (artwork.data.subjects ?? []).join(',');
    const artworkHref = `${basePath}artwork/${artwork.slug}`;
    const sortDate = sortKeyDate(artwork.data.date || '', artwork.data.year);
    return (
      <div
        class="grid-item"
        data-price-cat={priceCat || undefined}
        data-price={priceNum ?? undefined}
        data-date={sortDate || undefined}
        data-donation={isDonation ? 'true' : undefined}
        data-sold={isSold ? 'true' : 'false'}
        data-subjects={subjects || undefined}
        data-artwork-overlay
      >
        <img
          src={imgSrc}
          alt={artwork.data.title}
          loading="lazy"
          decoding="async"
        />
        <div class="overlay">
          <span class="overlay-title">{artwork.data.titleHe ?? artwork.data.title}</span>
          {artwork.data.price && <span class="overlay-price">{artwork.data.price}</span>}
          <span class="overlay-status">{isSold ? 'נמכר' : 'זמין'}</span>
          <a href={artworkHref} class="overlay-btn">
            פרטים
          </a>
        </div>
      </div>
    );
  })}
</div>
</div>

<style>
  .grid-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
    width: 100%;
  }

  .grid-item {
    aspect-ratio: 1;
    overflow: hidden;
    display: block;
    position: relative;
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .grid-item:hover img {
    transform: scale(1.03);
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    padding: 1rem;
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.35s ease,
      transform 0.35s ease;
  }

  .grid-item:hover .overlay,
  .grid-item.overlay-visible .overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .overlay-title {
    color: #fff;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-align: center;
    line-height: 1.3;
  }

  .overlay-price {
    color: #fff;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-align: center;
  }

  .overlay-status {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-align: center;
  }

  .overlay-btn {
    display: inline-block;
    padding: 0.6rem 1.5rem;
    background: #fff;
    color: #111;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    border-radius: 2rem;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .overlay-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .grid-item {
      aspect-ratio: 4/3;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const prefersNoHover = window.matchMedia('(hover: none)').matches;
    if (!prefersNoHover) return;

    const items = document.querySelectorAll('[data-artwork-overlay]');
    items.forEach((item) => {
      item.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target.closest('.overlay-btn')) return;
        items.forEach((other) => {
          if (other !== item) other.classList.remove('overlay-visible');
        });
        item.classList.toggle('overlay-visible');
      });
    });
  });
</script>
