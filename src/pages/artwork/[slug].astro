---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const artworks = await getCollection('artworks');
  return artworks.map((artwork) => ({
    params: { slug: artwork.slug },
    props: { artwork },
  }));
}

const { artwork } = Astro.props;
const { Content } = await artwork.render();
const base = import.meta.env.BASE_URL.replace(/\/$/, '') || '';
const basePath = base ? `${base}/` : '/';
const categoryHref = artwork.data.category === 'sketches' ? `${basePath}sketches` : basePath;
const imgSrc = artwork.data.image.startsWith('/')
  ? `${basePath}${artwork.data.image.slice(1)}`
  : `${basePath}${artwork.data.image}`;
const roomSrc = `${basePath}images/living-room.jpg`;
---

<BaseLayout title={`${artwork.data.title} | Moshe Roth`} description={artwork.data.description ?? artwork.data.title}>
  <article class="artwork">
    <div class="image-container">
      <img src={imgSrc} alt={artwork.data.title} />
    </div>

    <div class="details">
      <h1>{artwork.data.title}</h1>
      {artwork.data.year && <span class="year">{artwork.data.year}</span>}
      {artwork.data.category && (
        <a href={categoryHref} class="category">
          {artwork.data.category}
        </a>
      )}

      <dl class="info-list">
        {artwork.data.medium && (
          <>
            <dt>Medium</dt>
            <dd>{artwork.data.medium}</dd>
          </>
        )}
        {artwork.data.size && (
          <>
            <dt>Size</dt>
            <dd>{artwork.data.size}</dd>
          </>
        )}
        {artwork.data.price && (
          <>
            <dt>Price</dt>
            <dd class="price">{artwork.data.price}</dd>
          </>
        )}
      </dl>

      {artwork.data.price && (
        <div class={`availability ${artwork.data.sold ? 'sold' : 'available'}`}>
          <span class="availability-dot" aria-hidden="true"></span>
          <span>{artwork.data.sold ? 'Sold' : 'Available'}</span>
        </div>
      )}

      {artwork.data.price && !artwork.data.sold && (
        <a
          href="https://www.instagram.com/mzsrtgzr2/"
          target="_blank"
          rel="noopener noreferrer"
          class="contact-btn"
        >
          Contact me on Instagram
        </a>
      )}

      <div class="content">
        <Content />
      </div>
    </div>

    <section class="room-preview">
      <h2>In your space</h2>
      <div class="room-scene" style={`background-image: url('${roomSrc}')`}>
        <div class="frame">
          <img src={imgSrc} alt={artwork.data.title} />
        </div>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .artwork {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .image-container {
    width: 100%;
    margin-bottom: 2rem;
  }

  .image-container img {
    width: 100%;
    height: auto;
    display: block;
  }

  .details {
    padding: 0 0 3rem;
  }

  .details h1 {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    margin: 0 0 0.5rem;
  }

  .year {
    font-size: 0.85rem;
    color: #666;
    margin-right: 1rem;
  }

  .category {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
  }

  .category:hover {
    opacity: 1;
  }

  .info-list {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.25rem 2rem;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  .info-list dt {
    font-weight: 500;
    color: #666;
  }

  .info-list dd {
    margin: 0;
  }

  .info-list .price {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .availability {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .availability.available {
    color: #2d7a3e;
  }

  .availability.sold {
    color: #c53030;
  }

  .availability-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .availability.available .availability-dot {
    background: #2d7a3e;
  }

  .availability.sold .availability-dot {
    background: #c53030;
  }

  .contact-btn {
    display: inline-block;
    margin: 1.5rem 0;
    padding: 0.75rem 1.5rem;
    background: #111;
    color: #fff;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .contact-btn:hover {
    opacity: 0.85;
  }

  .content {
    margin-top: 1.5rem;
    line-height: 1.7;
    color: #444;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .room-preview {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }

  .room-preview h2 {
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    color: #666;
  }

  .room-scene {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    max-height: 400px;
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 12%;
    border-radius: 8px;
    overflow: hidden;
  }

  .frame {
    width: 32%;
    max-width: 200px;
    aspect-ratio: 3/4;
    padding: 0.5rem;
    background: #f5f0e8;
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.2),
      0 2px 6px rgba(0, 0, 0, 0.1),
      inset 0 0 0 1px rgba(0, 0, 0, 0.06);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 640px) {
    .artwork {
      padding: 1rem;
    }

    .room-scene {
      aspect-ratio: 3/4;
      max-height: 320px;
    }

    .frame {
      width: 45%;
      max-width: 160px;
    }
  }
</style>
